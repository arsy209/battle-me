<div class="col-sm-12">
<ul class="list-inline">

	<li><%= link_to 'Add New Pokemon', new_pokemon_path, class: "btn btn-primary"%></li>
	<% if @pokemons.any?%>
	<li><%= link_to 'Heal All Pokemon', heal_all_pokemons_path, class: 'btn btn-success' %></li>
	  <li><%= link_to 'Battle Now', pokemon_battles_path, class: 'btn btn-danger' %></li>
</ul>
	<table class="table pokemon-back">
		<thead>
		  <tr class="bg-primary">
		    <th>#</th>
		    <th>Name</th>
		    <th>ID</th>
		    <th>Level</th>
		    <th>Health</th>
		    <th>Current Health</th>
		    <th>Attack</th>
		    <th>Defence</th>
		    <th>Speed</th>
		    <th>Exp Point</th>
		    <th colspan="2">Action</th>
		  </tr>
		</thead>
		<tbody>
			<%  @pokemons.each do |pokemon| %>
				<tr>
					<th><%= pokemon.id %></th>
					<td><%= link_to pokemon.name, pokemon %></td>
					<td><%= pokemon.pokedex_id %></td>
					<td><%= pokemon.level %></td>
					<td><%= pokemon.max_health_point %></td>
					<td><%= pokemon.current_health_point %></td>
					<td><%= pokemon.attack %></td>
					<td><%= pokemon.defence %></td>
					<td><%= pokemon.speed %></td>
					<td><%= pokemon.current_experience %></td>
					<td><%= button_to 'Heal', pokemon_heal_path(pokemon_id: pokemon.id), class: 'btn btn-success' %></td>
					<td><center>
						<%= button_to 'Destroy', pokemon,method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
				  </center></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%else%>
	<kbd>Please click the button to add your pokemon.</kbd>
	<% end %>
</div>

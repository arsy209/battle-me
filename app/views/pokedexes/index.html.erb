<div class="container ">
  <div class="col-sm-12">
    <div class="button">
      <!-- <%= link_to 'Add New Pokemon', new_pokedex_path, class: "btn btn-primary"%> -->
    </div>
      <button type="button" class="btn btn-primary butt-pad" data-toggle="modal" data-target="#ordine">New Pokemon</button>
      <!-- Modal -->
      <div id="ordine" class="modal fade " role="dialog">
        <div class="modal-dialog">
          <!-- Modal content-->
          <div class="modal-content modal-new ">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">Ã—</button>
              <h4 class="modal-title">Ordine inviato!</h4>
            </div>
            <div class="modal-body ">
            <%= render partial: "pokedexes/form" %>
            </div>
          </div>
        </div>
      </div>
  	<table class="table table-inverse back">
  		<thead>
  		  <tr class="bg-primary">
  		    <th>#</th>
  		    <th>Name</th>
  		    <th>Base Health Point</th>
  		    <th>Base Attack</th>
  		    <th>Base Defence</th>
  		    <th>Base Speed</th>
  		    <th>Base Element Type</th>
  		    <th colspan="2"><center>Action</center></th>
  		  </tr>
  		</thead>
  		<tbody>
  			<% @pokedexes.each do |pokedex| %>
  				<tr>
  					<th><%= pokedex.id %></th>
  					<td><%= link_to pokedex.name, pokedex %></td>
  					<td><%= pokedex.base_health_point %></td>
  					<td><%= pokedex.base_attack %></td>
  					<td><%= pokedex.base_defence %></td>
  					<td><%= pokedex.base_speed %></td>
  					<td><%= pokedex.element_type %></td>
  					<td><%= link_to 'Edit', edit_pokedex_path(pokedex), class: 'btn btn-default' %></td>
  					<td><center>
  						<%= button_to 'Destroy', pokedex,
  						method: :delete,
  						class: 'btn btn-danger',
  					  data: { confirm: 'Are you sure?' } %>
  				  </center></td>
  				</tr>
  			<% end %>
  		</tbody>
  	</table>
      <div class="pagination">
          <%= will_paginate renderer: BootstrapPagination::Rails %>
      </div>
  </div>
</div>

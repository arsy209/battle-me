<div class="container show-pokemon">
	<div class="col-sm-3">
		<%= image_tag @pokedex.image_url, size: "250x250" %>
	<table class="table table-inverse back">
		<tr>
			<td class="bg-primary">#</td>
			<td class="bg-danger"><%= @pokedex.id %></td>
		</tr>
		<tr>
			<td class="bg-primary">Name</td>
			<td class="bg-danger"><%= @pokedex.name %></td>
		</tr>
		<tr>
			<td class="bg-primary">Health Point</td>
			<td class="bg-danger"><%= @pokedex.base_health_point %></td>
		</tr>
		<tr>
			<td class="bg-primary">Attack</td>
			<td class="bg-danger"><%= @pokedex.base_attack %></td>
		</tr>
		<tr>
			<td class="bg-primary">Defence</td>
			<td class="bg-danger"><%= @pokedex.base_defence %></td>
		</tr>
		<tr>
			<td class="bg-primary">Speed</td>
			<td class="bg-danger"><%= @pokedex.base_speed %></td>
		</tr>
		<tr>
			<td class="bg-primary">Element Type</td>
			<td class="bg-danger"><%= @pokedex.element_type %></td>
		</tr>
	</table>
	</div>
</div>
